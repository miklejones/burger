<div class="row">
  <div class="bg-danger jumbotron text-center col-sm-12">
    <img src="assets/images/snake.jpg" height="400" width="800" alt="burger" class="img-fluid rounded">
    <!--<h1>Burgers!</h1>-->
  </div>
</div>

<div class="row">
  <div class="col-sm-6" id="toEat">
    <h2>Burgers to eat!</h2>

    <ul>
      {{#each burgers}} {{#unless devoured}} {{>burgers/burger-block devoured=true}} {{/unless}} {{/each}}
    </ul>
  </div>

  <div class="col-sm-6" id="eaten">
    <h2>Burgers Devoured!</h2>

    <ul>
      {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured = false}} {{/if}} {{/each}}
    </ul>
  </div>

</div>

<div class="row">
  <div class="col-sm-8 offset-sm-2 text-center" id="addBurger">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
      </div>

      <button class="btn btn-primary" id="burgerButton" type="submit">Add Burger to Devour</button>
    </form>
  </div>
</div>